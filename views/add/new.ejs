<%include ../partials/header%>

<h1>Welcome to Add Blog Page</h1>

<div class="container">
    <div class="thumbnail">
        <form action="/blogs/<%=blog._id%>/adds" method="POST">
            <div class="form-group">
                <span class="label label-default">Add BlogTitle</span>
               <input class="form-control" type="text" name="add[title]" placeholder="Add title"> 
            </div>
            <div class="form-group">
                <span class="label label-default">Add BlogText</span>
               <textarea class="form-control" name="add[body]" rows="10" placeholder="write anything about you!"></textarea> 
            </div>
            <button class="btn btn-primary btn-block">Submit</button>
        </form>
    </div>
</div>

<%include ../partials/footer%>