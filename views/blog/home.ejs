    <div class="icon-close">
        <i class="fa fa-times fa-2x" aria-hidden="true"></i>
    </div>
    <!--Menu skeleton-->
    <ul>
        <li><a href="/blogs">Blog</a></li>
        <li><a href="/about">About</a></li>
