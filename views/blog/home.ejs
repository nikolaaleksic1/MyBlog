<script>
    var main = function() {
        $('.icon-close').click(function(){
           $('.menu').animate({
              left: "-285px",
              opacity: 5
           }, 700);
        $('body').animate({
              left: "0px",
              opacity: 5
        }, 700)
        });
        
        $('.icon-open').click(function(){
           $('.menu').animate({
               left: "0px"
           }, 300); 
           
           $('body').animate({
              left: "285px"
           }, 300);
        });
    }
    $(document).ready(main);
</script>
