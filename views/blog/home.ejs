<!--Main BodyPage-->
<div class="main-body">
    <div class="icon-open">
        <i class="fa fa-bars" aria-hidden="true"></i>
        Menu
    </div>    
    <div class="text">
        <h1>Welcome to the Blog Page!!</h1>
