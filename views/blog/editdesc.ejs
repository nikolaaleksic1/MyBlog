<%include ../partials/header%>



<div class="container">
    <h1 class="text-center">Welcome to Edit Description Page</h1>
    <hr>
    <div class="thumbnail">
        <form action="/blogs/<%=blog._id%>?_method=PUT" method="POST">
            <div class="form-group">
                <span class="label label-default">Birthday</span>
                <input class="form-control" type="text" name="blog[year]" value="<%=blog.year%>"> 
            </div>
            <div class="form-group">
                <span class="label label-default">City</span>
                <input class="form-control" type="text" name="blog[city]" value="<%=blog.city%>"> 
            </div>
            <div class="form-group">
                <span class="label label-default">Work</span>
                <input class="form-control" type="text" name="blog[work]" value="<%=blog.work%>"> 
            </div>
            <div class="form-group">
                <span class="label label-default">Description</span>
                <textarea class="form-control" rows="4" name="blog[description]"><%=blog.description%></textarea>
            </div>
            <button class="btn btn-primary btn-block">Submit</button>
        </form>
    </div>
</div>

<%include ../partials/footer%>